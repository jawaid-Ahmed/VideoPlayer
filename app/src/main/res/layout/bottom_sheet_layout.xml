<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#96000000"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titlebottomSheet"
            android:text="Title"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/sharebottomsheet"
        android:layout_height="56dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_share"
            android:layout_height="match_parent"></ImageView>

        <TextView
            android:text="Share"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/propertiesbottomsheet"
        android:layout_height="56dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_info"
            android:layout_height="match_parent"></ImageView>

        <TextView
            android:text="Properties"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/deletebottomsheet"
        android:layout_height="56dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_height="match_parent"></ImageView>

        <TextView
            android:text="Delete"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/renamebottomsheet"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_edit_black_24dp"></ImageView>

        <TextView
            android:text="Rename"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

</LinearLayout>